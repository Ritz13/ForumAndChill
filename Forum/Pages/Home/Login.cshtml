@page
@model Forum.Pages.Home.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="User.Username" class="control-label"></label>
        <input id="inputLocation" asp-for="User.Username" class="form-control" required />
        <span asp-validation-for="User.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Password" class="control-label"></label>
        <input type="password" id="inputICW" asp-for="User.Password" class="form-control" required />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>
    <button type="submit">Login</button>
</form>
