@page
@model Forum.Pages.Home.SignupModel
@{
    ViewData["Title"] = "Signup";
}

<h2>Signup</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="User.Email" class="control-label"></label>
        <input id="inputEmail" asp-for="User.Email" class="form-control" required />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Username" class="control-label"></label>
        <input id="inputLocation" asp-for="User.Username" class="form-control" required />
        <span asp-validation-for="User.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Password" class="control-label"></label>
        <input type="password" id="inputICW" asp-for="User.Password" class="form-control" required />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword" class="control-label"></label>
        <input type="password" id="inputWinVer" asp-for="@Model.ConfirmPassword" class="form-control" required />
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit">Signup</button>
</form>

